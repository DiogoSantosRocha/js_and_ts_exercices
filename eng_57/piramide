let readlineSync = require('readline-sync');
let n = Number(readlineSync.question('Digite no numero de andares: '));
let string = "";
let nstars = 1;
let spaces = (n*2)-2;

for(let i = 0; i < n; i++){
  for(let j = 0; j < spaces; j++){ 
     string += " ";
  }
  spaces--;
  for(let j = 0; j < nstars; j++){
     string += "*";
  }
  nstars += 2;
  if(i < n-1){
    string += "\n";
  }
}
console.log(string);
